func (v *formatter_) formatNarrative(narrative ast.NarrativeLike) {
	var s = narrative.AsString()
	var lines = sts.Split(s, EOL)
	v.appendString(`">`)
	v.depth++
	for _, line := range lines {
		if len(line) > 0 {
			v.appendNewline()
			v.appendString(line)
		} else {
			v.appendString(EOL)
		}
	}
	v.depth--
	v.appendNewline()
	v.appendString(`<"`)
}

