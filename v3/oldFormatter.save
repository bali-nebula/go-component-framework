		v.appendString("let ")
		var recipient, operator = clause.GetRecipient()
		v.formatRecipient(recipient)
		v.appendString(" ")
		v.formatOperator(operator)
		v.appendString(" ")
	}
	var expression = clause.GetExpression()
	v.formatExpression(expression)
}

