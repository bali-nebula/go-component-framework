}

func (v *formatter_) formatValues(values ast.ValuesLike) {
	v.appendString("[")
	var iterator = com.ComponentIterator(values)
	switch values.GetSize() {
	case 0:
		v.appendString(" ")
	case 1:
		var value = iterator.GetNext()
		v.formatComponent(value)
	default:
		v.depth++
		for iterator.HasNext() {
			v.appendNewline()
			var value = iterator.GetNext()
			v.formatComponent(value)
		}
		v.depth--
		v.appendNewline()
	}
	v.appendString("]")
}

